{% extends 'base.html.twig' %}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('fos_user_security_check') }}" class="col-sm-offset-4" method="post">
        <div class="form-group row">
            <label class="control-label col-sm-1 col-xs-2" for="username">User:</label>
            <div class="col-sm-4">
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-sm-1 col-xs-2" for="password">Pass:</label>
            <div class="col-sm-4">
                <input class="form-control" type="password" id="password" name="_password" />
            </div>
        </div>
        <div class="center-block">
            <button class="btn btn-success btn-md center-block" type="submit">Login</button>
        </div>
    </form>

{% endblock %}